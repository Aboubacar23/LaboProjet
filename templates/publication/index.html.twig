{% extends 'base.html.twig' %}

{% block title %}Publication index{% endblock %}

{% block body %}
    <h1>La liste des publications</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Document</th>
                <th>DatePublication</th>
                
            </tr>
        </thead>
        <tbody>
        {% for publication in publications %}
            <tr>
                <td>{{ publication.id }}</td>
                <td>{{ publication.Titre }}</td>
                <td>{{ publication.Auteur }}</td>
                <td><a href="{{asset('document_publication/' ~ publication.document)}}">{{publication.document}}</a></td>
                <td>{{ publication.DatePublication ? publication.DatePublication|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('publication_show', {'id': publication.id}) }}"><i class="fas fa-eye"></i></a>
                   </td>
                   <td> <a href="{{ path('publication_edit', {'id': publication.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">La liste est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        {{ knp_pagination_render( publications )}}
        
    <a href="{{ path('publication_new') }}">Ajouter Publication</a>
{% endblock %}

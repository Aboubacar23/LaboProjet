{% extends 'base.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}
   <div>
    <h1>Les  annonces</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date_ajout</th>
                
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.Titre }}</td>
                <td>{{ annonce.Contenu }}</td>
                <td>{{ annonce.DateAjout ? annonce.DateAjout|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('annonce_show', {'id': annonce.id}) }}"><i class="fas fa-eye"></i></a></td>
                   <td> <a href="{{ path('annonce_edit', {'id': annonce.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">la table annonce est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('annonce_new') }}">Ajouter une Annonce</a>
    </div>
{% endblock %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
               
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td>{{ equipe.id }}</td>
                <td>{{ equipe.Nom }}</td>
                <td><a href="{{ path('equipe_show', {'id': equipe.id}) }}"><i class="fas fa-eye"></i></a>
                </td>
                <td><a href="{{ path('equipe_edit', {'id': equipe.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
                <td><a href="{{ path('equipe_delete', {'id': equipe.id}) }}"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Le tableau equipe est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('equipe_new') }}">Ajouter Equipe</a>
{% endblock %}

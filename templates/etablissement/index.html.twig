{% extends 'base.html.twig' %}

{% block title %}Etablissement index{% endblock %}

{% block body %}
    <h1>la liste des Etablissements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th> 
                
            </tr>
        </thead>
        <tbody>
        {% for etablissement in etablissements %}
            <tr>
                <td>{{ etablissement.id }}</td>
                <td>{{ etablissement.Nom }}</td>
                <td>
                    <a href="{{ path('etablissement_show', {'id': etablissement.id}) }}"><i class="fas fa-eye"></i></a>
                  </td>
                  <td>  <a href="{{ path('etablissement_edit', {'id': etablissement.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">la liste est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('etablissement_new') }}">Ajouter</a>
{% endblock %}
